{
	"info": {
		"_postman_id": "7ff98184-1fa2-44ca-8472-e4494d8787b5",
		"name": "KakunaAuth",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var uuid = require('uuid');\r",
							"\r",
							"pm.collectionVariables.set(\"PASSWORD\", \"asdffdsA1\");\r",
							"pm.collectionVariables.set(\"USERNAME\", uuid.v4() + \"@test.com\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"Positive response body\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.success).to.eql(true);\r",
							"    pm.expect(jsonData.error).to.eql(null);\r",
							"    pm.expect(jsonData.data.username).to.eql(pm.collectionVariables.get(\"USERNAME\"));\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"{{USERNAME}}\",\r\n    \"password\": \"{{PASSWORD}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{ENDPOINT}}/api/rest/v1.0/auth/signup",
					"host": [
						"{{ENDPOINT}}"
					],
					"path": [
						"api",
						"rest",
						"v1.0",
						"auth",
						"signup"
					]
				}
			},
			"response": []
		},
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Valid response body\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.success).to.eql(true);\r",
							"    pm.expect(jsonData.error).to.eql(null);\r",
							"\r",
							"    pm.collectionVariables.set(\"ACCESS_TOKEN\", jsonData.data.accessToken);\r",
							"    pm.collectionVariables.set(\"ACCESS_TOKEN_TYPE\", jsonData.data.tokenType);\r",
							"\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"{{USERNAME}}\",\r\n    \"password\": \"{{PASSWORD}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{ENDPOINT}}/api/rest/v1.0/auth/signin",
					"host": [
						"{{ENDPOINT}}"
					],
					"path": [
						"api",
						"rest",
						"v1.0",
						"auth",
						"signin"
					]
				}
			},
			"response": []
		},
		{
			"name": "New Request",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "{{ACCESS_TOKEN_TYPE}} {{ACCESS_TOKEN}}",
